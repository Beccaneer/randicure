class RegistrationsController < Devise::RegistrationsController
  def new
    super
		
  end

  def create
    super
		populate
  end

  def update
    super
  end


	def populate
		if current_user
    	@id = current_user.id
			@user = User.find(@id)
			@stripes = Tech.new(title: 'horizontal stripes', mincol: 2, maxcol: 5, minaccents: 1, maxaccents: 3, user_id: @id)
			@stripes.save
			@watermarble = Tech.new(title: 'water marble', mincol: 3, maxcol: 5, minaccents: 0, maxaccents: 0, user_id: @id)
			@watermarble.save
   	else
     #redirect_to new_user_session_path
   	end
	end

end
